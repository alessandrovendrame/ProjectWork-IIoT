@page "/Calendar"
@model CalendarModel
@{
    ViewData["Title"] = "Calendar";

}
<!DOCTYPE html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link href='~/lib/fullcalendar/lib/main.css' rel='stylesheet' />
<script src='~/lib/fullcalendar/lib/main.js'></script>
<script src='~/js/calendar.js'></script>

<div class="container">
    <div id='calendar' class=""></div>
        <div class="modal fade" tabindex="-1" role="dialog" id="details-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Lesson details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row ">
                            <div class="col-4">
                                <label for="subject">Subject</label>
                            </div>
                            <div class="col-4 offset-3">
                                <label for="teacher">Teacher</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input type="number" id="id" class="form-control" hidden />
                                <input type="text" id="subject" class="form-control" required />
                            </div>
                            <div class="col-4 offset-3">
                                <input type="text" id="teacher" class="form-control" required />
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-4">
                                <label for="classroom">Classroom</label>
                            </div>
                            <div class="col-4 offset-3">
                                <label for="floor">Floor</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input type="text" id="classroom" class="form-control" required />
                            </div>
                            <div class="col-4 offset-3">
                                <input type="text" id="floor" class="form-control" required />
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-4">
                                <label for="date">Date</label>
                            </div>
                            <div class="col-4 offset-3">
                                <label for="startTime">Start Lesson</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                <input type="date" id="date" class="form-control" required />
                            </div>
                            <div class="col-4 offset-2">
                                <input type="time" id="startTime" class="form-control" required />
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-4">
                                <label for="duration">Duration (Hours)</label>
                            </div>
                            <div class="col-4 offset-3">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <input type="text" id="duration" class="form-control" placeholder="hours" required />
                            </div>
                            <div class="col-4 offset-3">

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" id="editButton">Edit</button>
                        <button  class="btn btn-danger" id="deleteButton">Delete</button>
                    </div>
                </div>
            </div>
        </div>
