<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/images/itsRT.png">
    <title>@ViewData["Title"] - RoomTech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="~/css/bar.css" />
    <link rel="shortcut icon" href="~/images/itsRT.png">

    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/lib/selectFX/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/lib/jqvmap/dist/jqvmap.min.css">


    <link rel="stylesheet" href="~/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header mb-5">
                <img class="mt-5" src="images/logoBar.png" style="width: 155px; height: 31px;">
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse mt-5">
                <ul class="nav navbar-nav">
                    <!--MENU-->
                    <li>
                        <a asp-area="" asp-page="/Dashboard/Dashboard"> <i class="menu-icon fa fa-home"></i>Dashboard </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/Dashboard/Calendar"> <i class="menu-icon fa fa-calendar"></i>Calendar </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/Lessons/Insert"> <i class="menu-icon fa fa-plus"></i>New Lesson</a>
                    </li>

                </ul>
            </div>

        </nav>
        <div class="footer">
            <img class="mt-3" src="images/logo_roomtech.png" style="width: 230px; height: 200px;">
        </div>
    </aside>

    <div id="right-panel" class="right-panel">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/js/main.js"></script>

    <script src="~/lib/chart.js/dist/Chart.bundle.min.js"></script>
    <script src="~/lib/js/dashboard.js"></script>
    <script src="~/lib/js/widgets.js"></script>
    <script src="~/lib/jqvmap/dist/jquery.vmap.min.js"></script>
    <script src="~/lib/jqvmap/examples/js/jquery.vmap.sampledata.js"></script>
    <script src="~/lib/jqvmap/dist/maps/jquery.vmap.world.js"></script>
</body>
</html>
